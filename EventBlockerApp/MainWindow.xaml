<Window x:Class="EventBlockerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventBlockerApp"
        mc:Ignorable="d"
        Title="Blocker or injector" Height="250" Width="225">
    <StackPanel Margin="15">
        <ComboBox x:Name="appsCmbBox">
            <ComboBoxItem IsSelected="True">Samples.WindowsFormsApp</ComboBoxItem>
            <ComboBoxItem>Samples.WpfApp</ComboBoxItem>
        </ComboBox>
        <Button FontSize="20" Content="Start blocking" Click="Button_Click" HorizontalAlignment="Center" Margin="20" />
        <TextBlock TextAlignment="Center" TextWrapping="Wrap">Clicking this button will initiate blocking for mouse-down events in selected app</TextBlock>
    </StackPanel>
</Window>